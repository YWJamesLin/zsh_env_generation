
# Aliases
#   System
alias poweroff="sudo sync && sudo sync && sudo sync && sudo /usr/bin/env poweroff"
alias reboot="sudo sync && sudo sync && sudo sync && sudo /usr/bin/env reboot"
alias systemctl="sudo systemctl"

#   Command
alias pwd="pwd -P"
alias rmdir="rmdir -p"
alias ls="ls --color=always"
alias cp="cp -ai"
alias rm="rm -ri"
alias mv="mv -i"
alias egrep="egrep --color=auto --exclude-dir={.bzr,.cvs,.git,.hg,.svn}"

#   Distro-depended Aliasing
alias aptitude="sudo aptitude"
alias yum="sudo yum"
alias pacman="sudo pacman"

# Environment Variables
#   System
LC_ALL="zh_TW.UTF-8"
export LC_ALL
