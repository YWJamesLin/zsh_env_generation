
# Aliases
#   System
alias poweroff="sync && sync && sync && /usr/bin/env poweroff"
alias reboot="sync && sync && sync && /usr/bin/env reboot"

#   Command
alias pwd="pwd -P"
alias rmdir="rmdir -p"
alias ls="ls --color=always"
alias cp="cp -ai"
alias rm="rm -ri"
alias mv="mv -i"
alias egrep="egrep --color=auto --exclude-dir={.bzr,.cvs,.git,.hg,.svn}"

# Environment Variables
#   System
LC_ALL="zh_TW.UTF-8"
VISUAL="vim"
export VISUAL LC_ALL
